@model WordSearchMVC5.Models.WordUserInput
@{
    ViewBag.Title = "Word Search";
}
<div class="page-header">
    <h1>Word Search Online</h1>
</div>

@using (Ajax.BeginForm("WordSearch", "Home", new AjaxOptions
{
    HttpMethod = "POST",
    UpdateTargetId = "SetupWordSearch"
}))
{


<div class="row center-block" id="SetupWordSearch">
    <div>
        <p>Enter the values below to get your results.</p>
    </div>
    <div class="form-group">
        <label for="WordListEntry">Enter Words</label>
        @Html.EditorFor(model => model.GridSize, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <label for="WordListEntry">Enter Words</label>
        <p class="sub-helper-text">Separate each word with a space. Press Shift+Enter, or use the enter button to put in your words.</p>
        @Html.EditorFor(model => model.UserWords, new { htmlAttributes = new { @class = "form-control" } })

    </div>
    <input type="submit" value="Start Word Search" class="btn btn-primary" />
</div>
}
